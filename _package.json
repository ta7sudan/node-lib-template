{
  "name": "{{project}}",
  "version": "0.1.0",
  "description": "{{desc}}",
  "main": "src/index.js",
  "types": "types/index.d.ts",
  "typings": "types/index.d.ts",
  "scripts": { {{if hasPock}}
    "start": "pock",{{/if}}
    "lint": "eslint src{{if hasTest} test{{/if}}",
    "format": "prettier --config .prettierrc.js --write src/**/*.js test/**/*.js",
    "inspect": "jsinspect src"{{if hasTest}},
    "test": "nyc ava -v",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"{{/if}}{{if !hasTravis&&hasTest}},
    "prepare": "npm test"{{/if}}
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/{{author}}/{{project}}.git"
  },
  "keywords": [{{each keywords $kwd $idx}}
    "{{@$kwd}}"{{if $idx != keywords.length - 1}},{{/if}}{{/each}}
  ],
  "author": "{{author}}",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/{{author}}/{{project}}/issues"
  },
  "files": [
    "src",
    "dist",
    "example",
    "types"
  ],
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"{{if !hasTravis&&hasTest}},
      "pre-push": "npm test"{{/if}}
    }
  },{{if hasTest}}
  "ava": {
    "cache": true,
    "babel": false
  },
  "nyc": {
    "cache": true,
    "include": [
      "src/**/*.js"
    ]
  },{{/if}}
  "homepage": "https://github.com/{{author}}/{{project}}#readme",
  "devDependencies": { {{if hasTest}}
    "ava": "1.0.0-rc.1",
    "codecov": "^3.1.0",{{/if}}
    "eslint": "^5.7.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.1.2",
    "jsinspect": "^0.12.7",
    "lint-staged": "^7.3.0",{{if hasTest}}
    "nyc": "^13.1.0",{{/if}}{{if hasPock}}
    "pock": "^0.3.3",{{/if}}
    "prettier": "^1.14.3"
  }
}
